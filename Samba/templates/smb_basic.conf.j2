[global]
workgroup = {{ samba_workgroup }}
server string = Samba Server (%h)
security = user
map to guest = bad user
log file = /var/log/samba/log.%m
max log size = 1000
printing = cups
printcap name = cups
load printers = yes
cups options = raw

[{{ samba_share_name }}]
path = {{ samba_share_path }}
guest ok = {{ samba_guest_ok }}
writable = {{ samba_writable }}
browsable = {{ samba_browsable }}
