[global]
workgroup = {{ samba_workgroup }}
server string = Samba Server (%h)
security = user
log file = /var/log/samba/log.%m
max log size = 1000
printing = cups
printcap name = cups
load printers = yes
cups options = raw

[{{ samba_share_name }}]
path = {{ samba_share_path }}
valid users = +{{ samba_valid_users | replace(',', ' ') }}
writable = {{ samba_writable }}
browsable = {{ samba_browsable }}
